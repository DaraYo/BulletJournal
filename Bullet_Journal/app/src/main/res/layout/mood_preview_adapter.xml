<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:weightSum="8" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/mood_adapter_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/happy"
            android:background="#80ffffff"
            />
        <TextView
            android:id="@+id/mood_adapter_img_str"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height= "wrap_content"
            android:background="@color/moodOrange"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:text="@string/mood_good"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/mood_adapter_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/dialogButtonText"/>

        <TextView
            android:id="@+id/mood_adapter_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/mood_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_edit_btn_light"
            android:background="@drawable/rounded_bg_light"/>

        <ImageButton
            android:id="@+id/mood_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_delete_light"
            android:background="@drawable/rounded_bg_light"/>

    </LinearLayout>

</LinearLayout>
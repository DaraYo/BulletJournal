<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AlbumActivity"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.bullet_journal.fragments.ImagesPreviewFragment"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/take_a_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/fab_margin"
                app:backgroundTint="@color/isabelline"
                app:srcCompat="@drawable/ic_take_a_picture" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/attach_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/fab_margin"
                app:backgroundTint="@color/isabelline"
                app:srcCompat="@drawable/ic_add_image" />
    </LinearLayout>

</RelativeLayout>
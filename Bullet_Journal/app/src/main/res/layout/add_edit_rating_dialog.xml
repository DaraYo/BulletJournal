<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/add_rating_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_rating_dialog_title"
        android:background="@color/colorPrimaryLight"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:id="@+id/rating_dialog_for_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_mood_dialog_for_date"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rating_dialog_date_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add_rating_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_btn_background"
            app:srcCompat="@drawable/ic_star_filled_light" />

        <ImageButton
            android:id="@+id/add_rating_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_btn_background"
            app:srcCompat="@drawable/ic_star_filled_light" />

        <ImageButton
            android:id="@+id/add_rating_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_btn_background"
            app:srcCompat="@drawable/ic_star_filled_light" />

        <ImageButton
            android:id="@+id/add_rating_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_btn_background"
            app:srcCompat="@drawable/ic_star_filled_light" />

        <ImageButton
            android:id="@+id/add_rating_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_btn_background"
            app:srcCompat="@drawable/ic_star_border_light" />

    </LinearLayout>

    <TextView
        android:id="@+id/add_rating_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/add_rating_title"
        android:background="@color/colorPrimaryLight"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/rating_title"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/add_rating_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/add_rating_text"
        android:background="@color/colorPrimaryLight"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/rating_text"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rating_dialog_btn_cancel"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dialogButtonText"
            android:text="@string/cancel_str"/>

        <Button
            android:id="@+id/rating_dialog_btn_ok"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dialogButtonText"
            android:text="@string/ok_str"/>

    </LinearLayout>

</LinearLayout>
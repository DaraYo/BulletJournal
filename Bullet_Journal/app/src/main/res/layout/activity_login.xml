<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/my_ic_launcher" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_login_input"
        android:drawableLeft="@drawable/ic_login_email"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:padding="12dp"
        android:textCursorDrawable="@null"
        android:inputType="textEmailAddress"
        android:textColor="@color/puce"
        android:textColorHighlight="@color/burnished_brown"
        android:textColorHint="@color/light_puce" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_login_input"
        android:drawableLeft="@drawable/ic_login_password"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:padding="12dp"
        android:inputType="textPassword"
        android:textCursorDrawable="@null"
        android:textColor="@color/puce"
        android:textColorHighlight="@color/burnished_brown"
        android:textColorHint="@color/light_puce" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:textCursorDrawable="@null"
        android:text="Log In" />

    <TextView
        android:id="@+id/link_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="6dp"
        android:padding="4dp"
        android:text="@string/not_member_yet"
        android:textAlignment="center"
        android:textColor="@color/puce"
        android:textSize="16dp"/>

</LinearLayout>